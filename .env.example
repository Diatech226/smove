# Base URLs
APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_BRAND_NAME=SMOVE Communication

# Auth
JWT_SECRET=change_me_with_a_long_random_secret

# Admin bootstrap (disabled by default in production)
ADMIN_BOOTSTRAP_ENABLED=true
ADMIN_BOOTSTRAP_EMAIL=admin@smove.com
ADMIN_BOOTSTRAP_PASSWORD=ChangeMe123!
ADMIN_BOOTSTRAP_ROLE=admin
ADMIN_BOOTSTRAP_ALLOW_PROD=false

# Optional seed admin script variables
SMOVE_ADMIN_SEED_EMAIL=admin@smove.local
SMOVE_ADMIN_SEED_PASSWORD=ChangeMe123!
SMOVE_ADMIN_SEED_PASSWORD_HASH=

# Prisma MongoDB connection
# IMPORTANT: must include /smove in the path
DATABASE_URL=mongodb+srv://USERNAME:PASSWORD@cluster0.example.mongodb.net/smove?retryWrites=true&w=majority&appName=Cluster0
DIRECT_DATABASE_URL=mongodb+srv://USERNAME:PASSWORD@cluster0.example.mongodb.net/smove?retryWrites=true&w=majority&appName=Cluster0

# Media storage (local by default)
MEDIA_STORAGE=local
MEDIA_PUBLIC_BASE_URL=http://localhost:3000
MEDIA_MAX_BYTES=20971520
MEDIA_MAX_FILES=6

# Optional S3/R2 storage for production
S3_BUCKET=
S3_ENDPOINT=
S3_REGION=auto
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_BASE_URL=
