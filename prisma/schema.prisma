// file: prisma/schema.prisma
// Run "npx prisma db push" after modifying this schema.

datasource db {
  provider = "mongodb"
  url       = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum PostStatus {
  draft
  published
  archived
  removed
}

enum ContentStatus {
  draft
  published
  archived
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  name        String
  description String?
  category    String?
  categorySlug String?
  sectorSlug  String?
  coverMediaId String @db.ObjectId
  cover       Media   @relation("ServiceCover", fields: [coverMediaId], references: [id])
  status      ContentStatus? @default(published)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  client    String
  title     String
  sector    String
  sectorSlug String?
  categorySlug String?
  summary   String?
  body      String?
  results   String[] @default([])
  category  String?
  coverMediaId String @db.ObjectId
  cover       Media   @relation("ProjectCover", fields: [coverMediaId], references: [id])
  status     ContentStatus? @default(published)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  excerpt     String?
  body        String?
  tags        String[] @default([])
  coverMediaId String @db.ObjectId
  cover       Media   @relation("PostCover", fields: [coverMediaId], references: [id])
  galleryMediaIds String[] @db.ObjectId @default([])
  videoMediaId String? @db.ObjectId
  video       Media?  @relation("PostVideo", fields: [videoMediaId], references: [id])
  categoryId  String?  @db.ObjectId
  category    Category? @relation(fields: [categoryId], references: [id])
  status      PostStatus @default(draft)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  date        DateTime
  location    String?
  description String?
  category    String?
  coverMediaId String @db.ObjectId
  cover       Media   @relation("EventCover", fields: [coverMediaId], references: [id])
  status      ContentStatus? @default(published)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Media {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        String
  folder      String?
  originalUrl String
  variants    Json?
  posterUrl   String?
  mime        String
  size        Int
  width       Int?
  height      Int?
  duration    Int?
  createdAt   DateTime @default(now())

  services    Service[] @relation("ServiceCover")
  projects    Project[] @relation("ProjectCover")
  postCovers  Post[]    @relation("PostCover")
  postVideos  Post[]    @relation("PostVideo")
  events      Event[]   @relation("EventCover")
}

model Taxonomy {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  slug      String
  label     String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type, slug])
  @@index([type, active])
  @@index([type, order])
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  name      String
  slug      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts     Post[]

  @@unique([type, slug])
  @@index([type, order])
}

model SiteSettings {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  key           String   @unique
  siteName      String
  siteTagline   String
  logo          String?
  favicon       String?
  primaryColor  String?
  secondaryColor String?
  socialLinks   Json?
  contact       Json?
  seo           Json?
  blog          Json?
  homepage      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum UserRole {
  admin
  client
}

enum UserStatus {
  pending
  active
  disabled
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String?
  role         UserRole @default(client)
  status       UserStatus @default(pending)
  inviteTokenHash String? @unique
  inviteExpiresAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@index([role])
  @@index([status])
}
