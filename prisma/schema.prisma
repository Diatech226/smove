// file: prisma/schema.prisma
// Run "npx prisma db push" after modifying this schema.

datasource db {
  provider = "mongodb"
  url       = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum PostStatus {
  draft
  published
  archived
  removed
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  name        String
  description String?
  category    String?
  categorySlug String?
  sectorSlug  String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  client    String
  title     String
  sector    String
  sectorSlug String?
  categorySlug String?
  summary   String?
  body      String?
  results   String[] @default([])
  category  String?
  coverImage String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  excerpt     String?
  body        String?
  tags        String[] @default([])
  coverImage  String?
  gallery     String[] @default([])
  videoUrl    String?
  categoryId  String?  @db.ObjectId
  category    Category? @relation(fields: [categoryId], references: [id])
  status      PostStatus @default(draft)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  date        DateTime
  location    String?
  description String?
  category    String?
  coverImage  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Taxonomy {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  slug      String
  label     String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type, slug])
  @@index([type, active])
  @@index([type, order])
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  name      String
  slug      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts     Post[]

  @@unique([type, slug])
  @@index([type, order])
}
